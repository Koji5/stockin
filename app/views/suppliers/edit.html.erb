<h1 class="mb-4">業者編集</h1>

<%= form_for(@supplier, class: 'mt-4') do |f| %>
  <div class="mb-3">
    <%= f.label :name, '業者名', class: 'form-label' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :tel, '電話番号', class: 'form-label' %>
    <%= f.text_field :tel, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :product_ids, '取扱商品', class: 'form-label' %>
    <%= f.collection_select :product_ids, @products, :id, :name, {selected: @supplier.product_ids}, {multiple: true, class: 'form-control'} %>
  </div>

  <%= f.submit '業者更新', class: 'btn btn-primary' %>
  <%= link_to '戻る', suppliers_path, class: 'btn btn-secondary', style: 'margin-left: 10px' %>
<% end %>