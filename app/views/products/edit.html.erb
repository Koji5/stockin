<h1 class="mb-4">商品編集</h1>

<%= form_with(model: @product, local: true, class: 'mt-4') do |form| %>
  <div class="mb-3">
    <%= form.label :name, '商品名', class: 'form-label' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :price, '単価', class: 'form-label' %>
    <div class="input-group">
      <%= form.number_field :price, class: 'form-control' %>
      <span class="input-group-text">円</span>
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :stock, '在庫数', class: 'form-label' %>
    <div class="input-group">
      <%= form.number_field :stock, class: 'form-control' %>
      <span class="input-group-text">個</span>
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :supplier_ids, '取扱業者', class: 'form-label' %>
    <%= form.collection_select :supplier_ids, @suppliers, :id, :name, {selected: @product.supplier_ids}, {multiple: true, class: 'form-control'} %>
  </div>

  <%= form.submit '商品更新', class: 'btn btn-primary' %>
  <%= link_to '戻る', products_path, class: 'btn btn-secondary', style: 'margin-left: 10px' %>
<% end %>