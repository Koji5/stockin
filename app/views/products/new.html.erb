<h1 class="mb-4">商品登録</h1>

<%= form_for(@product, class: "mt-4") do |f| %>
  <div class="mb-3">
    <%= f.label :name, "商品名", class: "form-label" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :price, "単価", class: "form-label" %>
    <div class="input-group">
      <%= f.number_field :price, class: "form-control" %>
      <span class="input-group-text">円</span>
    </div>
  </div>

  <div class="mb-3">
    <%= f.label :stock, "在庫数", class: "form-label" %>
    <div class="input-group">
      <%= f.number_field :stock, class: "form-control" %>
      <span class="input-group-text">個</span>
    </div>
  </div>

  <div class="mb-3">
    <%= f.label :supplier_ids, "取扱業者", class: "form-label" %>
    <%= f.collection_select :supplier_ids, @suppliers, :id, :name, {}, { multiple: true, class: "form-control" } %>
  </div>

  <%= f.submit "作成", class: "btn btn-primary" %>
  <%= link_to "戻る", products_path, class: "btn btn-secondary", style: 'margin-left: 10px' %>
<% end %>